   <children>
      <ImageView fitHeight="600.0" fitWidth="1000.0" layoutX="-1.0" layoutY="-12.0" onDragDetected="#LeaderBoard" pickOnBounds="true" AnchorPane.leftAnchor="-0.0" AnchorPane.topAnchor="-0.0">
         <image>
            <Image url="@../Contents/Images/bg.png" />
         </image>
      </ImageView>
      <GridPane layoutX="291.0" layoutY="173.0" minHeight="-Infinity" minWidth="-Infinity" prefHeight="242.0" prefWidth="418.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Main Menu" textFill="#4da6ff" GridPane.columnSpan="2" GridPane.halignment="CENTER">
               <font>
                  <Font name="System Bold" size="34.0" />
               </font>
