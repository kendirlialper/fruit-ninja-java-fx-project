            <Button mnemonicParsing="false" onAction="#playGame" style="-fx-background-color: green;" text="Play" textFill="WHITE" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="1">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
